{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest Current",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-vs"],
            // "args": ["${file}::<test_name>"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "_PYTEST_RAISE": "1",
            }
        },
        {
            "name": "Pytest ALL",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "justMyCode": true
        },
        {
            "name": "generify",
            "type": "debugpy",
            "request": "launch",
            "program": "generify/test_generify.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}
